			<span><a title = '登录' href='/post'>发布</a></span>
			<span><a title = '注册' href='/logout'>登出</a></span>
		<% } else { %>
			<span><a title = '登录' href='/login'>登录</a></span>
			<span><a title = '注册' href='/register'>注册</a></span>
		<% } %>
		</nav>
		<article>
		<% if (success) { %>
			<div><%= success %></div>
		<% } %>
